<% content_for :title, "Új támogatás" %>
<div class="container">
  <div class="row">
    <h1>Új támogatás</h1>
    <%= @donation.errors.messages %>
	  <div class="container">
      <%= form_for :donation, url: {action: :create}, method: :post, html: {class: "form-horizontal"} do |f| %>
        <div class="form-group has-feedback <% unless @donation.errors.messages[:amount].blank? %> has-error <% end %>">
          <%= f.label "Mennyiség", for: "amount", class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_field :amount,  class: "form-control" %>
          </div>
        </div>
        <div class="form-group has-feedback <% unless @donation.errors.messages[:user_id].blank? %> has-error <% end %>">
          <%= f.label "Felhasználó" , for: "user_id", class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_field :user_id, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit "Bevitel", class: "btn btn-default" %>
          </div>
        </div>
      <% end %>
	  </div>
  </div>

  <hr>

  <footer>
	<p>&copy; 2016 Crafters</p>
  </footer>
</div> <!-- /container -->

