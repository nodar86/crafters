<%= content_for(:title, @event.name) %>
<div class="container">
  <div class="row">
  	<h1><%= @event.name %></h1>
	  <div class="container">
      <div class="table-responsive">
        <table class="table">
          <thead>
            <th>Időpont</th>
            <th>Név</th>
            <th>Csoportos</th>
            <th>Jelentkezett / Maximum</th>
            <th>Csoportméret</th>
          </thead>
          <tbody>
            <tr>
              <td> <%= @event.startDate.strftime "%Y. %m. %d. %H:%M" %></td>
              <td><%= @event.name %></td>
              <td><%= if @event.groupEvent then "igen" else "nem" end %></td>
              <td><%= @event.users.length*@event.playersInGroup %> / <%= @event.maxPlayers %></td>
              <td><%= @event.playersInGroup %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Jelentkezett játékosok</h3>
        </div>
        <div class="panel-body">
          <ul class="list-group">
            <% @event.users.each do |user| %>
              <li class="list-group-item <%= "list-group-item-danger" unless user.isonwhitelist %>"><%= user.username %></li>
            <% end %>
          </ul>
        </div>
      </div>
	  </div>

  <hr>

  <footer>
	<p>&copy; 2016 Crafters</p>
  </footer>
</div> <!-- /container -->

