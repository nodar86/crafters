<% content_for :title, "Bejelentkezés" %>
<div class="container">
  <div class="row">
    <h1>Bejelentkezés</h1>
	  <div class="container">
      <%= form_tag 'sessions/create', method: :post, class: "form-horizontal" do %>
        <div class="form-group">
          <%= label_tag :username, "Felhasználónév", class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= text_field_tag :username, '', class:"form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= label_tag :password, "Jelszó", class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= password_field_tag :password, '', class:"form-control" %>
            <p class="help-block">Ha nem enged belépni gyere vissza ide és frissíts a Ctrl+F5 kombinációval.</p>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= submit_tag "Bejelentkezés", class:"btn btn-default" %>
          </div>
        </div>
      <% end %>
	  </div>
  </div>

  <hr>

  <footer>
	<p>&copy; 2016 Crafters</p>
  </footer>
</div> <!-- /container -->

